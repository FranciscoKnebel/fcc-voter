<span>
	<div class="ui icon message" ng-show="loading">
		<i class="notched circle loading icon"></i>
		<div class="content">
			<div class="header">
				Just one second
			</div>
			<p>We're getting your polls.</p>
		</div>
	</div>
	<div class="ui error message" ng-show="message">
		{{message}}
	</div>
</span>

<div ng-repeat="poll in polls">
	<div class="ui fitted divider"></div>
	<span class="" data-tooltip="Poll has {{poll.options.length}} options. Total Votes: {{poll.totalVotes}}.">
		<b>"{{poll.title}}"</b>
	</span>
	at:
	<a href="/poll/{{poll.link}}">{{poll.link}}</a>
	<br>Created at
	{{poll.createdAt}}
</div>
